@model IEnumerable<CodingCraft.Ex01.Models.Venda>

@{
    ViewBag.Title = "Vendas";
}

<h2>Vendas</h2>

<br/>

<div class="form-inline">
    @Html.ActionLink("Incluir", "Create", null, new {@class = "btn btn-primary"})

    <div class="form-group">
        @using (Html.BeginForm("Pesquisar", "Venda"))
        {
            <input type="text" name="pesquisa" id="pesquisa" class="form-control" placeholder="Informe o Cliente"/>
            <button type="submit" class="btn btn-default">Pesquisar</button>
        }
    </div>
</div>

<br/>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Cliente.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataVenda)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ValorVenda)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UsuarioEdicao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataCadastro)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UsuarioCadastro)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataEdicao)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Cliente.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DataVenda)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ValorVenda)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UsuarioEdicao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DataCadastro)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UsuarioCadastro)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DataEdicao)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.VendaId }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.VendaId }) |
            @Html.ActionLink("Excluir", "Delete", new { id=item.VendaId })
        </td>
    </tr>
}

</table>
