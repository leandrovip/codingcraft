@model IEnumerable<CodingCraftEx06.Models.Country>

@{
    ViewBag.Title = "Country";
}

<h2>Countries</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new {@class = "btn btn-primary"})
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {id = item.CountryId}, new {@class = "btn btn-warning"}) 
                @Html.ActionLink("Details", "Details", new {id = item.CountryId}, new {@class = "btn btn-info"} ) 
                @Html.ActionLink("Delete", "Delete", new {id = item.CountryId}, new {@class = "btn btn-danger"})
            </td>
        </tr>
    }

</table>