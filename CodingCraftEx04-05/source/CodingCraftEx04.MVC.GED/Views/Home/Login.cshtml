@{
    ViewBag.Title = "Login";
}

<h2>Efetue o Login</h2>
<hr />
<br />

@if (ViewBag.Retorno != null)
{
    <div class="alert alert-danger">
        <p class="text-center">@ViewBag.Retorno</p>
    </div>
    <br/>
}

@using (Html.BeginForm("Login", "Home", FormMethod.Post))
{
    <div class="form-horizontal">
        <div class="form-group">
            <label class="control-label col-md-2">E-mail</label>
            <input type="email" name="email" class="form-control col-md-10" />
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Senha</label>
            <input type="password" name="senha" class="form-control col-md-10" />
        </div>
    </div>

    <input type="submit" value="Entrar" class="btn btn-success" />
}
