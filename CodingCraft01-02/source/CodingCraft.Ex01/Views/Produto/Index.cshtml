@model IEnumerable<CodingCraft.Ex01.Models.Produto>

@{
    ViewBag.Title = "Produto";
}

<h2>Cadastro de Produtos</h2>

<br/>

<div class="form-inline">
    @Html.ActionLink("Incluir", "Create", null, new {@class = "btn btn-primary"})

    <div class="form-group">
        @using (Html.BeginForm("Pesquisar", "Produto"))
        {
            <input type="text" name="pesquisa" id="pesquisa" class="form-control" placeholder="Informe o Produto"/>
            <button type="submit" class="btn btn-default">Pesquisar</button>
        }
    </div>
</div>

<br/>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Valor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Categoria.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataCadastro)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UsuarioCadastro)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataEdicao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UsuarioEdicao)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Valor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categoria.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataCadastro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UsuarioCadastro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataEdicao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UsuarioEdicao)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new {id = item.ProdutoId}) |
                @Html.ActionLink("Detalhes", "Details", new {id = item.ProdutoId}) |
                @Html.ActionLink("Excluir", "Delete", new {id = item.ProdutoId})
            </td>
        </tr>
    }

</table>