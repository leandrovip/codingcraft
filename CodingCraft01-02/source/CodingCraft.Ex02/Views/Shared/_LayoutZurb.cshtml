<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Coding Craft</title>

    @Styles.Render("~/Content/foundation/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="top-bar">
        <div class="top-bar-left">
            <ul class="dropdown menu" data-dropdown-menu>
                <li class="menu-text">CodingCraft</li>

                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                <li>
                    <a href="#">Cadastros</a>
                    <ul class="menu vertical">
                        <li>@Html.ActionLink("Categorias", "Index", "CategoriaProduto")</li>
                        <li>@Html.ActionLink("Tags", "Index", "Tag")</li>
                        <li>@Html.ActionLink("Grupos", "Index", "GrupoProduto")</li>
                        <li>@Html.ActionLink("Produtos", "Index", "Produto")</li>
                        <li>@Html.ActionLink("Vincular Tags e Grupo", "Index", "GrupoProdutoTag")</li>
                    </ul>
                </li>
                <li>
                    <a href="#">Layouts</a>
                    <ul class="menu vertical">
                        <li>@Html.ActionLink("Bootstrap", "MudarLayout", "Home", new { layout = "bootstrap", urlAtual = Request.Url }, null)</li>
                        <li>@Html.ActionLink("Zurb Foundation", "MudarLayout", "Home", new { layout = "zurb", urlAtual = Request.Url }, null)</li>
                        <li>@Html.ActionLink("Sapo Ink", "MudarLayout", "Home", new { layout = "ink", urlAtual = Request.Url }, null)</li>
                    </ul>
                </li>
            </ul>
        </div>
    </div>

    <div class="row">
        @RenderBody()

        <hr />
        <p class="text-center">&copy; @DateTime.Now.Year - Coding Craft Capítulo 2 - Zurb Foundation</p>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/foundation")
    @RenderSection("scripts", required: false)
</body>
</html>
