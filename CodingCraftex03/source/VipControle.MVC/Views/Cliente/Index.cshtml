@model IEnumerable<VipControle.Domain.Models.Cliente>

@{
    ViewBag.Title = "Clientes";
}

<h2>Clientes</h2>

<div class="form-inline">
    @Html.ActionLink("Novo Cliente", "Create", null, new {@class = "btn btn-success"})

    <div class="form-group">
        @using (Html.BeginForm("Pesquisar", "Cliente"))
        {
            <input name="pesquisa" id="pesquisa" class="form-control" placeholder="Pesquise Nome Fantasia"/>
            <button type="submit" class="btn btn-primary">Pesquisar</button>
        }
    </div>

</div>

<br/>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RazaoSocial)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fantasia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CpfCnpj)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NomeContato)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cidade)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RazaoSocial)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fantasia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CpfCnpj)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NomeContato)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cidade)
            </td>
            <td class="col-xs-2 col-sm-2">
                <a href="@Url.Action("Edit", new {id = item.ClienteId})" class="btn btn-sm btn-warning" title="Editar">
                    <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                </a>

                <a href="@Url.Action("Details", new {id = item.ClienteId})" class="btn btn-sm btn-primary" title="Detalhes">
                    <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
                </a>

                <a href="@Url.Action("Delete", new {id = item.ClienteId})" class="btn btn-sm btn-danger" title="Excluir">
                    <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                </a>
            </td>
        </tr>
    }

</table>