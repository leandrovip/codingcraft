@model IEnumerable<CodingCraft.Ex01.Models.Categoria>

@{
    ViewBag.Title = "Index";
}

<h2>Categorias</h2>

<br/>

<div class="form-inline">

    @Html.ActionLink("Inlcuir", "Create", null, new {@class = "btn btn-primary"})

    <div class="form-group">
        @using (Html.BeginForm("Pesquisar", "Categoria"))
        {
            <input type="text" name="pesquisa" id="pesquisa" class="form-control" placeholder="Informe a Categoria"/>
            <button type="submit" class="btn btn-default">Pesquisar</button>
        }
    </div>
</div>

<br/>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataEdicao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UsuarioEdicao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataCadastro)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UsuarioCadastro)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataEdicao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UsuarioEdicao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataCadastro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UsuarioCadastro)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new {id = item.CategoriaId}) |
                @Html.ActionLink("Detalhes", "Details", new {id = item.CategoriaId}) |
                @Html.ActionLink("Excluir", "Delete", new {id = item.CategoriaId})
            </td>
        </tr>
    }

</table>