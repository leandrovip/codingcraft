@model IEnumerable<CodingCraft.Ex01.Models.Compra>

@{
    ViewBag.Title = "Index";
}

<h2>Compras</h2>

<div class="form-inline">
    @Html.ActionLink("Incluir", "Create", null, new { @class = "btn btn-primary" })

    <div class="form-group">
        @using (Html.BeginForm("Pesquisar", "Compra"))
        {
            <input type="text" name="pesquisa" id="pesquisa" class="form-control" placeholder="Informe a Razão"/>
            <button type="submit" class="btn btn-default">Pesquisar</button>
            @*@Html.TextBox("pesquisa", null, htmlAttributes: new { @class = "form-control" })*@
            @*@Html.ActionLink("Pesquisar", "Pesquisar", new { pesquisa = "xx" }, new { @class = "btn btn-default", @id = "btnPesquisar" })*@

        }
    </div>
</div>

<br />

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Fornecedor.RazaoSocial)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataCompra)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataPagamento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ValorTotalCompra)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataCadastro)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UsuarioCadastro)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataEdicao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UsuarioEdicao)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Fornecedor.RazaoSocial)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataCompra)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataPagamento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValorTotalCompra)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataCadastro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UsuarioCadastro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataEdicao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UsuarioEdicao)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.CompraId }) |
                @Html.ActionLink("Detalhes", "Details", new { id = item.CompraId }) |
                @Html.ActionLink("Excluir", "Delete", new { id = item.CompraId })
            </td>
        </tr>
    }

</table>
