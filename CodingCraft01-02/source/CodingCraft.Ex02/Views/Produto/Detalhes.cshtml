@model CodingCraft.Ex02.Models.Produto

@{
    ViewBag.Title = "Detalhes";
}

@{
    var sessionLayout = Session["layout"]?.ToString() ?? "bootstrap";

    switch (sessionLayout)
    {
        case "bootstrap":
            @Html.Partial("_Detalhes")
            break;
        case "zurb":
            <div class="grid-x grid-padding-x">
                <div class="cell large-offset-20"></div>
                <div class="cell large-100">
                    @Html.Partial("_DetalhesZurb")
                </div>
            </div>
            break;
        case "ink":
            <div class="ink-grid vertical-space">
                @Html.Partial("_DetalhesInk")
            </div>
            break;
    }
}